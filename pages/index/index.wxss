/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position:fixed; 
  left: 0px; 
  top: 0px; 
}

.userinfo-avatar {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  display: flex;
  flex-direction: column;
  align-items: center;
  position:fixed; 
  left: 40px; 
  top: 5px; 
  color: #aaa;
}

.userinfo-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  position:fixed; 
  left: 80px; 
  top: 5px; 
  color: #aaa;
}


.userinfo-weather {
  display: flex;
  flex-direction: column;
  align-items: center;
  position:fixed; 
  left: 120px; 
  top: 5px; 
  color: #aaa;
}

.userinfo-mapViewTap{
  display: flex;
  flex-direction: column;
  align-items: center;
  position:fixed; 
  left: 240px; 
  top: 5px; 
  color: #aaa;
  width: 10px;
  height: 10px;
}

.usermotto {
  margin-top: 200px;
}

.section-input{
  height:8%;
  background:#F4F4F4; 
  padding: 16rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
}

.section-input-width{
  width: 25%;
}

.vies-qiandao{
  position:absolute;
  right:5px;
  top:8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #000;
}

.table {
  border: 0px solid darkgray;
  width: 100%;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}